{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "tagName": "${version}",
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true,
    "releaseName": "${version}"
  },
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "yyyy.mm.minor",
      "increment": "calendar.minor"
    },
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "presetConfig": {
        "types": [
          {
            "type": "feat",
            "section": "âœ¨ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ› Bug Fixes"
          },
          {
            "type": "perf",
            "section": "âš¡ Performance Improvements"
          },
          {
            "type": "revert",
            "section": "âª Reverts"
          },
          {
            "type": "docs",
            "section": "ğŸ“ Documentation"
          },
          {
            "type": "style",
            "section": "ğŸ’„ Styles",
            "hidden": true
          },
          {
            "type": "chore",
            "section": "âœï¸ Miscellaneous Chores"
          },
          {
            "type": "ref",
            "section": "â™»ï¸ Code Refactoring"
          },
          {
            "type": "test",
            "section": "âœ… Tests"
          },
          {
            "type": "ci",
            "section": "ğŸ‘· Continuous Integration"
          }
        ]
      }
    }
  }
}
